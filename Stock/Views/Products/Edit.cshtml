@model Stock.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="product-edit-container">
    <div class="product-edit-card shadow">
        <div class="product-edit-header">
            <h1><i class="fas fa-edit"></i> Редактирование товара</h1>
            <p>Измените необходимые поля и сохраните обновлённые данные</p>
        </div>

        <div class="product-edit-body">
            <form asp-action="Edit" class="product-form">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag"></i> Название товара
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Введите название товара" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Price" class="form-label">
                            <i class="fas fa-dollar-sign"></i> Цена
                        </label>
                        <div class="input-group">
                            <input asp-for="Price" class="form-control" placeholder="Введите цену товара" />
                            <span class="input-group-text"></span>
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">
                        <i class="fas fa-align-left"></i> Описание
                    </label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Детальное описание товара"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="CategoryId" class="form-label">
                            <i class="fas fa-tags"></i> Категория
                        </label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option value="">Выберите категорию</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="SupplierId" class="form-label">
                            <i class="fas fa-truck"></i> Поставщик
                        </label>
                        <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId">
                            <option value="">Выберите поставщика</option>
                        </select>
                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-4">
                        <label asp-for="StockId" class="form-label">
                            <i class="fas fa-warehouse"></i> Склад
                        </label>
                        <select asp-for="StockId" class="form-control" asp-items="ViewBag.StockId">
                            <option value="">Выберите склад</option>
                        </select>
                        <span asp-validation-for="StockId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> Сохранить изменения
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-arrow-left"></i> Назад к списку
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>

    h1 {
        color: white;
    }

    .product-edit-container {
        display: flex;
        justify-content: center;
        padding: 2rem;
    }

    .product-edit-card {
        background: white;
        border-radius: 10px;
        width: 100%;
        max-width: 900px;
        overflow: hidden;
    }

    .product-edit-header {
        background: linear-gradient(135deg, #2e7d32 0%, #1b5e20 100%);
        color: white;
        padding: 2rem;
    }

        .product-edit-header h1 {
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

            .product-edit-header h1 i {
                margin-right: 1rem;
            }

    .product-edit-body {
        padding: 2rem;
    }

    @@media (max-width: 768px) {
        .product-edit-container {
            padding: 1rem;
        }

        .product-edit-header,
        .product-edit-body {
            padding: 1.5rem;
        }
    }


    /* Общие стили форм (можно вынести в отдельный файл) */
    .product-form .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
    }

        .product-form .form-label i {
            margin-right: 0.7rem;
            color: #2e7d32;
            width: 1.2rem;
        }

    .product-form .form-control {
        padding: 0.75rem 1rem;
        border-radius: 5px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s;
    }

        .product-form .form-control:focus {
            border-color: #2e7d32;
            box-shadow: 0 0 0 0.2rem rgba(46, 125, 50, 0.25);
        }

    .product-form textarea.form-control {
        min-height: 100px;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
    }

    .btn-primary {
        background-color: #1976D2;
        border-color: #1976D2;
        padding: 0.75rem 1.5rem;
    }

        .btn-primary:hover {
            background-color: #0D47A1;
            border-color: #0D47A1;
        }

    .btn-lg {
        font-size: 1.1rem;
    }

    .btn i {
        margin-right: 0.5rem;
    }

    .alert-danger {
        border-left: 4px solid #dc3545;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.3rem;
    }

    @@media (max-width: 768px) {
        .form-actions {
            flex-direction: column;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Добавляем маску для ввода цены
            $('#Price').inputmask('decimal', {
                'alias': 'numeric',
                'groupSeparator': ',',
                'autoGroup': true,
                'digits': 2,
                'digitsOptional': false,
                'placeholder': '0',
                'rightAlign': false
            });
        });
    </script>
}