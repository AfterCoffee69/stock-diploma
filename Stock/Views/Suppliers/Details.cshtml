@model Stock.Models.Supplier

@{
    ViewData["Title"] = "Детали поставщика";
}

<div class="supplier-details-container">
    <div class="supplier-details-card shadow">
        <div class="supplier-details-header">
            <h1><i class="fas fa-info-circle"></i> Информация о поставщике</h1>
            <p>Просмотр детальной информации о поставщике</p>
        </div>

        <div class="supplier-details-body">
            <div class="details-list">
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-truck"></i> Название
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>

                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-envelope"></i> Email
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Email)
                    </div>
                </div>

                <!-- Таблица товаров -->
                <div class="detail-section">
                    <h5><i class="fas fa-box-open"></i> Товары поставщика</h5>
                    @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
                    {
                        <table class="details-table">
                            <thead>
                                <tr>
                                    <th>Название товара</th>
                                    <th>Цена</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in ViewBag.Products)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>@product.Price BYN</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">Нет добавленных товаров</p>
                    }
                </div>
            </div>

            <div class="details-actions">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg">
                    <i class="fas fa-edit"></i> Редактировать
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Назад к списку
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    h1 {
        color: white;
    }

    p {
        color: white;
    }

    .supplier-details-container {
        display: flex;
        justify-content: center;
        padding: 2rem;
    }

    .supplier-details-card {
        background: white;
        border-radius: 10px;
        width: 100%;
        max-width: 900px;
        overflow: hidden;
    }

    .supplier-details-header {
        background: linear-gradient(135deg, #1976D2 0%, #0D47A1 100%);
        color: white;
        padding: 2rem;
    }

        .supplier-details-header h1 {
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

            .supplier-details-header h1 i {
                margin-right: 1rem;
            }

    .supplier-details-body {
        padding: 2rem;
    }

    .details-list {
        margin-bottom: 2rem;
    }

    .detail-item {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }

    .detail-label {
        font-weight: 500;
        width: 200px;
        display: flex;
        align-items: center;
        color: #1976D2;
    }

        .detail-label i {
            margin-right: 0.7rem;
            width: 1.2rem;
        }

    .detail-value {
        flex: 1;
        padding-left: 1rem;
        word-break: break-word;
    }

    .detail-section {
        margin-top: 2rem;
    }

        .detail-section h5 {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            color: #1976D2;
        }

            .detail-section h5 i {
                margin-right: 0.5rem;
            }

    .details-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 0.5rem;
    }

        .details-table thead tr {
            background-color: #e3f2fd;
            color: #1976D2;
            font-weight: bold;
        }

        .details-table th,
        .details-table td {
            padding: 0.6rem 0.8rem;
            border: 1px solid #ddd;
        }

        .details-table tbody tr:nth-of-type(even) {
            background-color: #f8fbff;
        }

    .details-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
    }

    .btn-primary {
        background-color: #1976D2;
        border-color: #1976D2;
        padding: 0.75rem 1.5rem;
    }

        .btn-primary:hover {
            background-color: #0D47A1;
            border-color: #0D47A1;
        }

    .btn-lg {
        font-size: 1.1rem;
    }

    .btn i {
        margin-right: 0.5rem;
    }

    @@media (max-width: 768px) {
        .supplier-details-container {
            padding: 1rem;
        }

        .supplier-details-header,
        .supplier-details-body {
            padding: 1.5rem;
        }

        .detail-item {
            flex-direction: column;
        }

        .detail-label {
            width: 100%;
            margin-bottom: 0.5rem;
        }

        .detail-value {
            padding-left: 0;
        }

        .details-actions {
            flex-direction: column;
        }
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}