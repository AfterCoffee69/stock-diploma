@model Stock.Models.Category

@{
    ViewData["Title"] = "Удаление категории";
}

<div class="category-delete-container">
    <div class="category-delete-card shadow">
        <div class="category-delete-header">
            <h1><i class="fas fa-trash-alt"></i> Удаление категории</h1>
            <p>Вы уверены, что хотите удалить эту категорию? Это действие нельзя отменить.</p>
        </div>

        <div class="category-delete-body">
            <div class="category-details">
                <div class="detail-row">
                    <div class="detail-label">
                        <i class="fas fa-tag"></i> Название:
                    </div>
                    <div class="detail-value">
                        @Html.DisplayFor(model => model.Name)
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <form asp-action="Delete" class="d-inline-block">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="fas fa-trash-alt"></i> Удалить
                    </button>
                </form>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Назад к списку
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    h1 {
        color: white;
    }

    p {
        color: white;
    }

    .category-delete-container {
        display: flex;
        justify-content: center;
        padding: 2rem;
    }

    .category-delete-card {
        background: white;
        border-radius: 10px;
        width: 100%;
        max-width: 800px;
        overflow: hidden;
    }

    .category-delete-header {
        background: linear-gradient(135deg, #d32f2f 0%, #b71c1c 100%);
        color: white;
        padding: 2rem;
    }

        .category-delete-header h1 {
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
        }

            .category-delete-header h1 i {
                margin-right: 1rem;
            }

    .category-delete-body {
        padding: 2rem;
    }

    .category-details {
        margin-bottom: 2rem;
    }

    .detail-row {
        display: flex;
        padding: 0.8rem 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

    .detail-label {
        width: 200px;
        font-weight: 500;
        color: #616161;
        display: flex;
        align-items: center;
    }

        .detail-label i {
            margin-right: 0.7rem;
            color: #d32f2f;
            width: 1.2rem;
        }

    .detail-value {
        flex: 1;
        color: #212121;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
    }

    .btn-danger {
        background-color: #d32f2f;
        border-color: #d32f2f;
        padding: 0.75rem 1.5rem;
    }

        .btn-danger:hover {
            background-color: #b71c1c;
            border-color: #b71c1c;
        }

    .btn-lg {
        font-size: 1.1rem;
    }

    .btn i {
        margin-right: 0.5rem;
    }

    @@media (max-width: 768px) {
        .category-delete-container {
            padding: 1rem;
        }

        .category-delete-header,
        .category-delete-body {
            padding: 1.5rem;
        }

        .detail-row {
            flex-direction: column;
        }

        .detail-label {
            width: 100%;
            margin-bottom: 0.3rem;
        }

        .form-actions {
            flex-direction: column;
        }
    }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}