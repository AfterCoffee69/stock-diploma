@{
    ViewData["Title"] = "Главная";
}

<div class="home-container">
    <!-- Герой-секция -->
    <div class="hero-section text-center py-5 mb-5 rounded-3" style="background: linear-gradient(135deg, #2e7d32 0%, #1b5e20 100%);">
        <div class="container py-5">
            <h1 class="display-4 fw-bold text-white mb-4">
                <i class="fas fa-warehouse me-3"></i>Stock Management System
            </h1>
            <p class="lead text-white-50 mb-5">
                Программное решение для управления складскими запасами, заказами и поставками
            </p>
            <div class="d-flex justify-content-center gap-3">
                <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg px-4 py-2">
                    <i class="fas fa-box-open me-2"></i>Управление товарами
                </a>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-light btn-lg px-4 py-2">
                    <i class="fas fa-clipboard-list me-2"></i>Работа с заказами
                </a>
            </div>
        </div>
    </div>

    <!-- Основной контент -->
    <div class="container">
        <!-- Быстрый доступ -->
        <div class="row mb-5">
            <div class="col-12 mb-4">
                <h2 class="text-center mb-4"><i class="fas fa-bolt me-2"></i>Быстрый доступ</h2>
                <div class="row g-3">
                    <div class="col-md-3 col-6">
                        <a asp-controller="Products" asp-action="Create" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-plus-circle me-2"></i>Новый товар
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-file-alt me-2"></i>Новый заказ
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a asp-controller="Customers" asp-action="Create" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-user-plus me-2"></i>Новый заказчик
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a asp-controller="Deliveries" asp-action="Index" class="btn btn-primary w-100 py-3">
                            <i class="fas fa-truck me-2"></i>Просмотр доставок
                        </a>
                    </div>
                </div>
            </div>

            @model List<Product>

            

        </div>

    </div>
</div>

<style>

    .home-container {
        padding-bottom: 3rem;
    }

    .hero-section {
        margin-top: -1rem;
        margin-left: -1rem;
        margin-right: -1rem;
    }

    .icon-wrapper {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-light-green {
        background-color: #e8f5e9;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 10px;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .list-group-item {
        padding: 0.75rem 0;
        background-color: transparent;
    }
</style>