@{
    ViewData["Title"] = "Вход в систему";
}

<div class="desktop-login-container">
    <div class="justify-content-center">
        <div class="col-xl-5 col-lg-6">

            <div class="desktop-login-card">

                <div class="desktop-login-left">
                    <div class="desktop-login-brand">
                        <i class="fas fa-warehouse"></i>
                        <span>STOCK SYSTEM</span>
                    </div>
                    <p class="desktop-login-subtitle">Войдите в систему для работы</p>
                </div>

                <div class="desktop-login-right">
                    <h2 class="desktop-login-title"><i class="fas fa-sign-in-alt"></i> Авторизация</h2>

                    <form method="post" class="desktop-login-form">
                        <div class="desktop-form-group">
                            <label for="username"><i class="fas fa-user"></i> Имя пользователя</label>
                            <div class="desktop-input-wrapper">
                                <input type="text" id="username" name="username"
                                       class="desktop-form-control" placeholder="Введите имя пользователя" required>
                            </div>
                        </div>

                        <div class="desktop-form-group">
                            <label for="password"><i class="fas fa-lock"></i> Пароль</label>
                            <div class="desktop-input-wrapper">
                                <input type="password" id="password" name="password"
                                       class="desktop-form-control" placeholder="Введите пароль" required>
                                <button class="desktop-toggle-password" type="button">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        @if (ViewBag.Error != null)
                        {
                            <div class="desktop-alert-error">
                                <i class="fas fa-exclamation-circle"></i>
                                <span>@ViewBag.Error</span>
                            </div>
                        }

                        <button type="submit" class="desktop-login-btn">
                            <i class="fas fa-sign-in-alt"></i> Войти в систему
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .desktop-login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #f5faf5;
        padding: 2rem;
        margin: 0;
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
    }

    .desktop-login-card {
        display: flex;
        width: 900px;
        height: 550px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        margin: auto;
        position: relative;
    }

    .desktop-login-left {
        flex: 1;
        background: linear-gradient(135deg, #2e7d32 0%, #1b5e20 100%);
        color: white;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .desktop-login-brand {
        display: flex;
        align-items: center;
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 3rem;
    }

        .desktop-login-brand i {
            font-size: 2.5rem;
            margin-right: 1rem;
        }

    .desktop-login-left h1 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        font-weight: 600;
    }

    .desktop-login-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        line-height: 1.6;
    }

    .desktop-login-right {
        flex: 1;
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .desktop-login-title {
        font-size: 2rem;
        margin-bottom: 2.5rem;
        color: #2e7d32;
        display: flex;
        align-items: center;
    }

        .desktop-login-title i {
            margin-right: 1rem;
            font-size: 1.8rem;
        }

    .desktop-form-group {
        margin-bottom: 2rem;
    }

        .desktop-form-group label {
            display: block;
            font-size: 1.1rem;
            margin-bottom: 0.8rem;
            color: #555;
            font-weight: 500;
        }

            .desktop-form-group label i {
                margin-right: 0.8rem;
                color: #2e7d32;
            }

    .desktop-input-wrapper {
        position: relative;
    }

    .desktop-form-control {
        width: 100%;
        padding: 1.2rem 1.5rem;
        font-size: 1.1rem;
        border: 2px solid #ddd;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .desktop-form-control:focus {
            border-color: #2e7d32;
            box-shadow: 0 0 0 3px rgba(46, 125, 50, 0.2);
            outline: none;
        }

    .desktop-toggle-password {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #777;
        cursor: pointer;
        font-size: 1.2rem;
    }

        .desktop-toggle-password:hover {
            color: #2e7d32;
        }

    .desktop-alert-error {
        background-color: #fdecea;
        color: #d32f2f;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        border-left: 4px solid #d32f2f;
    }

        .desktop-alert-error i {
            margin-right: 1rem;
            font-size: 1.5rem;
        }

    .desktop-login-btn {
        width: 100%;
        padding: 1.2rem;
        font-size: 1.2rem;
        background-color: #2e7d32;
        color: white;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 500;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .desktop-login-btn i {
            margin-right: 1rem;
        }

        .desktop-login-btn:hover {
            background-color: #1b5e20;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    .desktop-login-links {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #eee;
    }

        .desktop-login-links a {
            color: #2e7d32;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
            display: flex;
            align-items: center;
        }

            .desktop-login-links a i {
                margin-right: 0.5rem;
            }

            .desktop-login-links a:hover {
                color: #1b5e20;
                text-decoration: underline;
            }
</style>

@section Scripts {
    <script>
        // Показать/скрыть пароль
        document.querySelector('.desktop-toggle-password').addEventListener('click', function() {
            const passwordInput = document.getElementById('password');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        // Валидация формы
        document.querySelector('.desktop-login-form').addEventListener('submit', function(event) {
            if (!this.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
            }
            this.classList.add('was-validated');
        });
    </script>
}